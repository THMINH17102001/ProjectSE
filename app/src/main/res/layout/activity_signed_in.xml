<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignedIn">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="35dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="135dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mname"
                        android:id="@+id/ib_changename"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mcolor"
                        android:id="@+id/ib_color"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mhistory"
                        android:id="@+id/ib_history"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mavatar"
                        android:id="@+id/ib_changeavt"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="120dp">

                    <ImageView
                        android:id="@+id/avt_SignedIn"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logo" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="135dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mhelp"
                        android:id="@+id/ib_help"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/msearch"
                        android:id="@+id/ib_search"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mrank"
                        android:id="@+id/ib_rank"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/msout"
                        android:id="@+id/ib_signout"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:id="@+id/tv_displayname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi! ... ?"
                    android:textStyle="bold"
                    android:textColor="#4E4E89"
                    android:textSize="30dp"/>

            </LinearLayout>
            <Button
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="Single Mode"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/layoutbutton1"
                android:id="@+id/bt_singlemode"/>
            <Button
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="Multiplayer Mode"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/layoutbutton1"
                android:id="@+id/bt_multimode"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@null"
                android:text="Quit"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:textSize="16sp"
                android:id="@+id/bt_quit"/>

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>